page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.t-tabs, .t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
  background-color: unset !important;
  color: #fff !important;
}

/* .t-tabs__nav, .t-tabs__nav--top {
  overflow: hidden !important;
} */

.t-tabs__wrapper {
  background-color: unset !important;
}

.t-tabs .t-is-active {
  color: #fff !important;
  font-size: 30rpx !important;
}

.t-tabs .t-tabs__track {
  background-color: #fff !important;
  /* display: none !important; */
  bottom: 5rpx !important;
  width: 40rpx !important;
  height: 8rpx !important;
}

/* .home-page-container {
  background: #f5f5f5;
} */

.home-page-container,
.home-page-header {
  display: block;
  padding: 0 24rpx;
}

.home-page-header {
  background-color: #fc5253;
  padding-top: 2vh;
  border-bottom-left-radius: 1vh;
  border-bottom-right-radius: 1vh;
}

.home-page-header .t-search__input-container {
  border-radius: 32rpx !important;
  height: 64rpx !important;
}

.home-page-header .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.search {
  position: relative;
}

.search-clear {
  position: absolute;
  right: 20rpx;
  top: 0;
  z-index: 999;
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-body {
  color: #ccc;
  font-size: 24rpx;
  width: 100%;
  left: 0;
  top: 80rpx;
  position: absolute;
  z-index: 100;
  overflow: hidden;
}

.search-body-inner {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 24rpx;
}

.search-body-item {
  width: 100%;
  margin-bottom: 10rpx;
}

.home-page-header .swiper-wrap {
  margin-top: 20rpx;
}

.home-page-header .t-image__swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.home-page-container .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.home-page-container .t-tabs .t-tabs-scroll {
  border: none !important;
}

/* 半个字 */
.home-page-container .tab.order-nav .order-nav-item.scroll-width {
  min-width: 165rpx;
}

.home-page-container .tab .order-nav-item.active {
  color: #fa550f !important;
}

.home-page-container .tab .bottom-line {
  border-radius: 4rpx;
}

.home-page-container .tab .order-nav-item.active .bottom-line {
  background-color: #fa550f !important;
}

.home-page-container .tabs-external__item {
  color: #666 !important;
  font-size: 28rpx;
}

.home-page-container .tabs-external__active {
  color: #333333 !important;
  font-size: 32rpx;
}

.home-page-container .tabs-external__track {
  background-color: #fa4126 !important;
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 86rpx !important;
  background-color: unset !important;
  color: #ffdbdb;
  /* min-width: 120rpx !important; */
  min-width: unset !important;
  white-space: nowrap;
}

.home-page-container .goods-list-container {
  background: #f5f5f5 !important;
  /* margin-top: 24rpx; */
  /* padding-top: 24rpx; */
}

.t-class-indicator,
.loading-text {
  color: #b9b9b9 !important;
}

.blh-titile {
  width: 100%;
  height: 6vh;
  display: flex;
  justify-content: center;
  font-size: 18px;
}

.topback {
  position: fixed;
  width: 100vw;
  height: 22vh;
  background: #fc5253;
  top: 0;
  z-index: -1;
  /* border-radius: 1vh; */
  border-bottom-left-radius: 1vh;
  border-bottom-right-radius: 1vh;
}

.blh-screen {
  color: #666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #f8f8f8;
  padding: 20rpx 0;
  margin-top: 4rpx;
  position: relative;
  top: -12rpx;
  z-index: 1;
}
.blh-screen .blh-screen-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.blh-screen .blh-screen-item-acitve {
  color: #fc5253;
}

.blh-tabs {
  display: flex;
  align-items: center;
  width: 100%;
  position: relative;
  overflow: hidden !important;
}

.blh-tabs .blh-tabs-list {
  overflow: hidden !important;
  flex: 1;
  width: 90%;
  background-color: 'unset';
}

.blh-tabs .blh-tabs-down {
  width: 10%;
  display: flex;
  align-content: center;
  justify-content: center;
  position: relative;
  top: -5rpx;
}

.blh-screen .blh-tabs-block {
  width: 100%;
  background-color: #fff;
  position: absolute;
  top: 0;
  z-index: 9999;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.blh-tabs-item {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.t-tag--variant-outline.t-tag--theme-default {
  color: #777777 !important;
}

.nomore {
  color: #ccc;
  width: 100%;
  font-size: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
}